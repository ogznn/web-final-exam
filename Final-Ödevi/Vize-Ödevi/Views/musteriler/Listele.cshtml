@model IEnumerable<Vize_Ödevi.Models.Musteriler>

@{
    ViewData["Title"] = "Listele";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Müşteri Listesi</h1>

<p>
    <a asp-action="yeni">Yeni Kayıt</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
               Müşteri ID
            </th>
            <th>
                Müşteri Adı 
            </th>
            <th>
                Müşteri Soyadı
            </th>
            <th>
                Müşteri Adres
            </th>
            <th>
                Müşteri Telefon
            </th>
            <th>
                Müşteri Ürün ID
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.musteriAd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.musteriSoyad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.musteriAdres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.musteriTel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.musteriUrunId)
                </td>
                <td>
                   @Html.ActionLink("Güncelle", "Guncelle", new { id = item.Id }) |
                   @Html.ActionLink("Detay", "Detay", new { id = item.Id }) |
                   @Html.ActionLink("Sil", "Sil", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
