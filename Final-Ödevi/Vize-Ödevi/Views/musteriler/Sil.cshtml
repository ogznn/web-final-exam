@model Vize_Ödevi.Models.Musteriler

@{
    ViewData["Title"] = "Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Sil</h1>

<h3>Bunu silmek istediğinizden emin misiniz?</h3>
<div>
    <h4>Musteriler</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Müşteri ID =
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            Müşteri Adı =
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.musteriAd)
        </dd>
        <dt class="col-sm-2">
            Müşteri Soyadı =
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.musteriSoyad)
        </dd>
        <dt class="col-sm-2">
            Müşteri Adres =
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.musteriAdres)
        </dd>
        <dt class="col-sm-2">
            Müşteri Telefon Numarası =
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.musteriTel)
        </dd>
        <dt class="col-sm-2">
            Müşteri Ürün ID =
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.musteriUrunId)
        </dd>
    </dl>
    
    <form asp-action="Sil">
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Listele">Geri Dön</a>
    </form>
</div>
