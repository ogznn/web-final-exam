@model Vize_Ödevi.Models.Musteriler

@{
    ViewData["Title"] = "Yeni";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Yeni</h1>

<h4>Musteriler</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Yeni">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label">Müşteri ID </label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="musteriAd" class="control-label">Müşteri Adı </label>
                <input asp-for="musteriAd" class="form-control" />
                <span asp-validation-for="musteriAd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="musteriSoyad" class="control-label">Müşteri Soyadı </label>
                <input asp-for="musteriSoyad" class="form-control" />
                <span asp-validation-for="musteriSoyad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="musteriAdres" class="control-label">Müşteri Adres</label>
                <input asp-for="musteriAdres" class="form-control" />
                <span asp-validation-for="musteriAdres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="musteriTel" class="control-label">Müşteri Telefon Numarası</label>
                <input asp-for="musteriTel" class="form-control" />
                <span asp-validation-for="musteriTel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="musteriUrunId" class="control-label">Müşteri Ürün ID</label>
                <input asp-for="musteriUrunId" class="form-control" />
                <span asp-validation-for="musteriUrunId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Listele">Geri Dön</a>
</div>

